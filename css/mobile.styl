// iPhone 6 in portrait & landscape
@media only screen and (min-device-width : 375px) and (max-device-width : 667px)
  body
    .container
      nav
        padding 30px 40px 30px 30px

        .logo
          img
            height 100px

        button#mobileMenu
            display block
            background transparent
            border none
            font-size 500%
            float right

        .links
          overflow hidden
          display block
          height 0px

          a
            font-size 400%
            float none
            display block

      section
        &.jumbotron
          height 53vh
          background-position -3% bottom

          .aside
            top 0
            max-width 100%
            transform translateX(-100%)

            p
              font-size 400%

        &.socialProof
          margin-top 70px

          center
            img
              width 100%

        &.process
          h3
            font-size 400%
            padding 70px 0

          img
            width 100%

            center
              p
                font-size 50px

        &.following
          .aside
            transform translateX(100%) translateY(-60%)


