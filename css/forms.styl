.form
  display table
  width 600px
  margin 30px auto 0

  p
    display inline-block
    margin 40px 10px
    font-size 18px
    width 100%
    color #adadad

  button
    background transparent
    color #59cee7
    cursor pointer
    border 2px solid #59cee7
    padding 10px 25px
    border-radius 23px
    font-size 20px
    transition all ease-in-out 0.2s
    outline none

    &:hover, &:focus
      background #59cee7
      color white

.grouping
  width 600px
  float left

  .input
    box-sizing border-box
    width 100%
    position relative
    margin-top 35px
    float left
    -webkit-transition all .3s ease
    -o-transition all .3s ease
    transition all .3s ease

    &.col-1
      width 50%

      &:nth-of-type(n)
        padding-right 11px

      &:nth-of-type(2n)
        padding-left 11px

        label
          left 20px

    input
      box-sizing border-box
      display block
      font-size 18px
      font-weight 300
      margin-top 11px
      min-height 32px
      font-family 'Avenir', sans-serif
      color #000
      padding 0 10px 10px 10px
      width 100%
      border none
      border-bottom 1px solid #e5e5e6

      &:focus
        outline none

      &:focus ~ .bar:before,
      &:focus ~ .bar:after
        width 50%

      &:focus ~ .highlight
        animation inputHighlighter 0.3s ease

      &:focus ~ label
        top -11px
        font-size 12px
        font-weight 200
        color #000

    label
      color #a9a9a9
      font-size 18px
      font-weight 100
      position absolute
      pointer-events none
      left 10px
      top 5px
      transition 0.2s ease all

    .bar
      position relative
      display block
      width 100%

      &:before, &:after
        content ''
        height 3px
        width 0
        bottom 0
        position absolute
        background #59cee7
        transition 0.2s ease all

      &:before
        left 50%

      &:after
        right 50%

      .highlight
        position absolute
        height 25px
        width 25px
        border-radius 100%
        top 12px
        left 0
        pointer-events none
        opacity 0.5

