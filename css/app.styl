// .styl files use Stylus.
// Learn more at stylus-lang.com
// To compile, run $ stylus -w from root directory
$blue = #59cee7

body
  font-family "calibri"
  background #dcdcdc
  width 100%
  margin 0
  color #333
  min-width:1200px

h1,h3
  text-align center
  color #787878

a
  text-decoration none

*
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  text-shadow none
  text-rendering optimizeLegibility

nav
  padding-top 44px

  .links
    padding-top 0
    margin-right 40px
    float right

    a
      outline none
      &:focus
        border-bottom 3px solid $blue

nav, footer
  width 100%
  max-width 1200px
  background white
  margin auto
  display table
  font-family 'Avenir Next'
  font-size 14px
  color #7e8182

  .logo
    float left
    width auto
    outline none

    img
      margin-right 0!important
      height 40px
      float left
      margin-top -10px
      padding-left 100px

  .links
    a
      margin-right 25px
      color #7e8182
      padding 0 5px

      &.rounded
        border  2px solid $blue
        border-radius 20px
        padding-left 10px
        padding-right 10px
        padding-top 5px
        padding-bottom 5px
        color $blue
        transition all ease-in-out 0.2s

        &:hover, &:focus
          background $blue
          color white

.container
  max-width 1200px
  width 100%
  background white
  display table
  margin auto

section
  display table
  width 1200px
  margin 0 auto

  &.band
    height 300px
    margin-top 40px

    &.technology
      background #19b9db
    &.manifesto
      background #ef8324
    &.data
      background #397624
    &.fda
      background #264483
    &.contact
      background #e16d64
    &.thanks
      background #61b5f0

    p
      position relative
      z-index 2
      font-family 'Avenir'
      color #fff
      float left
      font-size 22px
      font-weight 100
      margin 200px 0 0 150px


.getAthelas
  width 800px
  padding-top 70px
  display block
  margin auto

  *
    color #5d5d5d
    font-family 'Avenir'
    font-weight 100

  img
    width 100%

  h3
    font-size 22px
    text-align left
    width 100%

    strong
      float right
      font-weight bold

  p
    font-size 18px


.form
  display table
  width 600px
  margin 30px auto 0

  h2, p
    font-family "Avenir"

  p
    display inline-block
    margin 40px 10px
    font-size 18px
    width 100%
    color #adadad

  button
    background transparent
    color #59cee7
    cursor pointer
    border 2px solid #59cee7
    padding 10px 25px
    border-radius 23px
    font-size 20px
    transition all ease-in-out 0.2s
    outline none

    &:hover, &:focus
      background #59cee7
      color white


.content
  max-width 800px
  margin auto
  margin-top 50px
  font-family 'Avenir'
  width 800px

footer
  margin-top 200px
  margin-bottom 70px

// Table section
#hor-minimalist-b
  font-family "Lucida Sans Unicode", "Lucida Grande", Sans-Serif
  font-size 12px
  background #fff
  margin 45px
  width 480px
  border-collapse collapse
  text-align left

  th
    font-size 14px
    font-weight normal
    color #039
    padding 10px 8px
    border-bottom 2px solid #6678b1

  td
    border-bottom 1px solid #ccc
    color #669
    padding 6px 8px

  tbody tr:hover td
    color #009

// Forms section
.grouping
  width 600px
  float left

  .input
    box-sizing border-box
    width 100%
    position relative
    margin-top 35px
    float left
    -webkit-transition all .3s ease
    -o-transition all .3s ease
    transition all .3s ease

    &.col-1
      width 50%

      &:nth-of-type(n)
        padding-right 11px

      &:nth-of-type(2n)
        padding-left 11px

        label
          left 20px

    input
      box-sizing border-box
      display block
      font-size 18px
      font-weight 300
      margin-top 11px
      min-height 32px
      font-family 'Roboto', sans-serif
      color #000
      padding 0 10px 10px 10px
      width 100%
      border none
      border-bottom 1px solid #e5e5e6

      &:focus
        outline none

      &:focus ~ .bar:before,
      &:focus ~ .bar:after
        width 50%

      &:focus ~ .highlight
        animation inputHighlighter 0.3s ease

      &:focus ~ label
        top -11px
        font-size 12px
        font-weight 200
        color #000

    label
      color #a9a9a9
      font-size 18px
      font-weight 100
      position absolute
      pointer-events none
      left 10px
      top 5px
      transition 0.2s ease all

    .bar
      position relative
      display block
      width 100%

      &:before, &:after
        content ''
        height 3px
        width 0
        bottom 0
        position absolute
        background #59cee7
        transition 0.2s ease all

      &:before
        left 50%

      &:after
        right 50%

      .highlight
        position absolute
        height 25px
        width 25px
        border-radius 100%
        top 12px
        left 0
        pointer-events none
        opacity 0.5

