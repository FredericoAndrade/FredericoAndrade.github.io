// To compile, run $ stylus -w from root directory

body
  font-family 'Avenir'
  background #dcdcdc
  width 100%
  margin 0
  color #333
  min-width:1200px

  h1,h3
    text-align center
    color #787878

  a
    text-decoration none

  *
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    text-shadow none
    text-rendering optimizeLegibility

.container
  width 100%
  background white
  display table
  margin auto